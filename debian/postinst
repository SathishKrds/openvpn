#!/bin/bash
set -e
cd /usr/share/k-openvpn && npm install --omit=dev --no-audit --no-fund 2>/dev/null || true
if command -v update-desktop-database >/dev/null 2>&1; then
  update-desktop-database /usr/share/applications 2>/dev/null || true
fi
echo ""
echo "âœ”  VPN Connect installed successfully."
echo "   Open 'VPN Connect' from your app menu or run: k-openvpn"
echo ""
exit 0
